doctype html
head
	meta(charset='UTF-8')
	meta(name='viewport' content='width=device-width, initial-scale=1.0')
	title AGC Farmland Parcelization
	// MAPBOX
	script(src='https://api.mapbox.com/mapbox-gl-js/v1.10.1/mapbox-gl.js')
	link(href='https://api.mapbox.com/mapbox-gl-js/v1.10.1/mapbox-gl.css' rel='stylesheet')
	script(src='./plugins/turf.min.js')
	// LEAFLET 1.3.1
	script(src='https://unpkg.com/leaflet@1.3.1/dist/leaflet.js')
	link(rel='stylesheet' href='https://unpkg.com/leaflet@1.3.1/dist/leaflet.css')
	// LEAFLET BING MAPS
	script(src='./plugins/LeafletBingLayer/bing.js')
	link(rel='stylesheet' href='./css/style.css')

body   
	.app-container
		section#map
			button.close-btn
				svg.events-none.icon.color-lighten75.color-white-on-hover(role='presentation' focusable='false' style='width: 18px; height: 18px;')
					use(xmlns:xlink='http://www.w3.org/1999/xlink' xlink:href='#icon-close')
		section.section-2-container
			.summaries
				.num-farmers
					div Num. Farmers
					#num_farmers.aggr-data -
				.allocated-hectares
					div Total Allocation
					#total_allocation.aggr-data -
				.grid-cell-size
					div Delineated Area
					#poly_area.aggr-data -
				.cells-per-hectare
					div Unused Land
					#unused_land.aggr-data -
			.user-feedback-container
				block retreived-agc-content
					div This is a placeholder 'div' for the retreived parcelized AGC
				#chunk_coords_listing.chunk-coords-listing
			section#farm_detail_map.farm-detail-map
				#map_location_overlay.leaflet-map-overlay Ogwashi-Uku, Delta State 6.1816&deg;N, 6.5303&deg;E
